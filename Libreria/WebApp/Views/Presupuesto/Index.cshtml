@using modelo.entidades;
@model IEnumerable<Presupuesto>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Presupuesto</h1>
<p> Presupuesto</p>

<div class="container" >
    <div class="row">
        <div class="col-sm-5">
            <h3>Presupuesto</h3>
        </div>
        <div class="col-sm-5">
            <a class="btn btn-success d-block"
               asp-controller="Presupuestos" asp-action="Create">
               Agregar nuevo Presupuesto</a>
        </div>
    </div>


    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }



    <div class="row">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Libros</td>
                    <td>Precio</td>
                    <td>Cantidad</td>
                    <td>Distribuidor</td>
                    <td>Acciones</td>

                </tr>
            </thead>
            <tbody>
                @foreach (Presupuesto presupuesto in Model)
                {
                    <tr>
                        <td>@presupuesto.PresupuestoId</td>
                        <td>@presupuesto.LibrosP</td>
                        <td>@presupuesto.PrecioP</td>
                        <td>@presupuesto.CantidadP</td>
                        <td>@presupuesto.DistribuidorP</td>
                        <td>
                            <a asp-controller="Presupuestos" asp-action="Edit" asp-route-id="@presupuesto.PresupuestoId" class="btn btn-primary">Editar</a>
                            <a asp-controller="Presupuestos" asp-action="Delete" asp-route-id="@presupuesto.PresupuestoId" class="btn btn-danger">Eliminar</a>
                        
                        </td>
                    </tr>
                    
                }


            </tbody>

        </table>

    </div>








</div>